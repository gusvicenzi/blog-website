<%- include("partials/header") -%>

<h1>Home</h1>

<p>
  <%= startingContent %>
</p>

<% //posts.forEach(function(post){ console.log(post.title) }); %>

<% posts.forEach(function(post){ %>
<h1>
  <%= post.title; %>
</h1>
<p>
  <% if(post.content.length>=100){ %>
  <%= post.content.substring(0,100)+"..."; %>
  <% } else { %>
  <%= post.content %>
  <% } %>
  <a href="/posts/<%= post.slug%>">Read more</a>
</p>
<% }); %>

